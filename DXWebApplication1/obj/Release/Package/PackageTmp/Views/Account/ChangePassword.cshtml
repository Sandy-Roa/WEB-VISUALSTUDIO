@model DXWebApplication1.Models.ChangePasswordModel
@{ Layout = "~/Views/Shared/_lightLayout.cshtml"; }

    <div class="accountHeader">

        <h2>
            Cambiar contraseña
        </h2>
        <p>Usa el formulario de abajo para cambiar tu contraseña</p>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.DevExpress().Label(settings =>
   {
       settings.Name = "OldPasswordLabel";
       settings.Text = "Contraseña Anterior";
       settings.AssociatedControlName = "OldPassword";
   }).GetHtml()
        <div class="form-field">
            @Html.EditorFor(m => m.OldPassword)
            @Html.ValidationMessageFor(m => m.OldPassword)
        </div>

        @Html.DevExpress().Label(settings =>
{
    settings.Name = "NewPasswordLabel";
    settings.Text = "Contraseña Nueva";
    settings.AssociatedControlName = "NewPassword";
}).GetHtml()

        <div class="form-field">
            @Html.EditorFor(m => m.NewPassword)
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>

        @Html.DevExpress().Label(settings =>
{
    settings.Name = "ConfirmPasswordLabel";
    settings.Text = "Confirmar Contraseña";
    settings.AssociatedControlName = "ConfirmPassword";
}).GetHtml()
        <div class="editor-field">
            @Html.EditorFor(m => m.ConfirmPassword)
            @Html.ValidationMessageFor(m => m.ConfirmPassword)

        </div>

        @Html.DevExpress().Button(settings =>
{
    settings.Name = "Button";
    settings.Text = "Cambiar contraseña";
    settings.UseSubmitBehavior = true;
}).GetHtml()
    }
