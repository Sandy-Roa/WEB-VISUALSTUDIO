        settings.Columns.Add("CLAVE_ARTICULO", "CLAVE DE ARTÍCULO");
        settings.Columns.Add("CANTIDAD_ORIGINAL", "CANTIDAD DE ORIGINAL");
		settings.Columns.Add("CANTIDAD_EMBARCADA","CANTIDAD EMBARCADA");
				//settings.Columns.Add("FK_EMBARQUE_HT");
			});
		if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()